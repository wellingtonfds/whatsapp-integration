generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Notification {
   id          BigInt    @id @default(autoincrement())
   type        NotificationType
   message     Json
   to          String
   answered    Boolean @default(false)
   sent        DateTime? 
   bill        Bill[] @relation("BillNotification")
   createdAt   DateTime           @default(now())
   updatedAt   DateTime           @updatedAt
}

enum NotificationType {
  TEMPLATE
  TEXT
}

model Bill {
  id          BigInt    @id @default(autoincrement())
  crmId       Int
  clientName  String
  ClientPhone String
  CPF         String
  value       Decimal
  paymentIdList String
  paymentDate DateTime?
  pixTaxId      String
  pixKey        String?
  pixQrCode     String?
  pixCreatedAt  DateTime?
  paymentValue  Decimal?
  pixExpiration DateTime?
  notification  Notification[] @relation("BillNotification")
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}