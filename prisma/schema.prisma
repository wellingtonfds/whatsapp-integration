generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        BigInt           @id @default(autoincrement())
  type      NotificationType
  message   Json
  answered  Boolean          @default(false)
  sent      DateTime?
  contact   Contact          @relation(fields: [contactId], references: [id])
  contactId BigInt
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

enum NotificationType {
  TEMPLATE
  TEXT
}

enum BillType {
  Cooperativa
  Mensalidade
}

model Bill {
  id               BigInt          @id @default(autoincrement())
  value            Decimal
  paymentIdList    String
  //CompetÃªncia
  effectiveDate    DateTime
  //Data de vencimento
  dueDate          DateTime
  paymentDate      DateTime?
  description      String?
  pixTaxId         String
  pixKey           String?
  pixQrCode        String?
  type             BillType @default(Mensalidade)
  pixCreatedAt     DateTime?
  paymentValue     Decimal?
  pixExpiration    DateTime?
  crmUpdate        DateTime?
  contact          Contact         @relation(fields: [contactId], references: [id])
  contactId        BigInt
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model Contact {
  id           BigInt         @id @default(autoincrement())
  phoneNumber  String
  CPF          String?
  name         String
  crmId        Int?
  mainCrmId    Int?
  email        String?
  address      String
  state        String
  city         String
  postalCode   String
  notification Notification[]
  bill         Bill[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  status         String?
}
